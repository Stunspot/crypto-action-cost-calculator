{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@types/*": ["src/types/*"],
      "@ui/*": ["src/ui/*"],
      "@state/*": ["src/state/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}